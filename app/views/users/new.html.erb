<section>
<div class="container pt-5">
  <div class="row pt-2">
    <div class="col-lg-5 px-3">
      <div class="overflow-hidden">
        <h3><%= (t'.title') %></h3>
        <%= bootstrap_form_with(model: @user) do |f| %>
          <%= f.text_field :name %>
          <%= f.email_field :email %>
          <%= f.password_field :password %>
          <%= f.password_field :password_confirmation %>
          <%= f.primary %>
        <% end %>
        <div class="pt-3">
          <%= link_to (t '.to_login_page'), login_path %>
          <%= link_to '登録メールが届きませんか？', resend_activation_path %> 
        </div>
      </div>
    </div>
  </div>
</div>
</section>

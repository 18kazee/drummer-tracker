<section>
  <div class="container">
    <%= turbo_frame_tag 'user-show' do %> 
    <div class="pt-5">
      <%= image_tag @user.avatar.url, class: 'rounded-circle', size: '100x100' %>
      <%= form_with model: @user, url: user_path(@user), data: {turbo_method: :patch, turbo_action: :advance } do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: 'form-control' %>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to 'Back', user_path(@user), class: 'btn btn-secondary', data: { turbo_action: :advance } %>
    <% end %>
    </div>
    <% end %>
  </div>
</section>

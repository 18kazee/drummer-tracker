<main data-controller="animation">
  <section>
    <div class="container">
      <div class="top-wrapper align-items-center text-center">
        <div class="row pt-3" data-animation-target="title">
          <h1 class="fw-medium"><%= t('.title') %></h1>
          <div><%= t('.subtitle') %></div>
        </div>
        <div class="pt-7" data-animation-target="text">
          <button type="button" data-action="click->animation#scrollToSection" class="btn btn-outline-dark btn-lg">scroll</button>
        </div>
      </div>
    </div>
  </section>

  <section data-animation-target="section">
    <div class="container">
      <div class="top-wrapper align-items-center" >
        <div class="row">
          <div class="col-sm-8 px-4" data-animation-target="image">
            <h3 class="fw-bold"><%= simple_format(h(t('.section_title1'))) %></h5>
            <h5><%= simple_format(h(t('.section_text1'))) %></h5>
          </div>
          <div class="col-sm-3 justify-content-start"> 
            <%= image_tag 'dr-logo.png', size: '200x150'%>
          </div>
        </div>
      </div>
  </section>

  <section>
      <div class="container">
        <div class="top-wrapper align-items-center">
          <div class="row">
            <div class="col-sm-6 text-center pt-3 pb-3">
              <%= image_tag 'note.png', size: '100x100'%>
            </div>
            <div class="col-sm-6" data-animation-target="image">
              <h3 class="fw-bold"><%= simple_format(h(t('.section_title2'))) %></h5>
              <h5><%= simple_format(h(t('.section_text2'))) %></h5>
            </div>
          </div>
        </div>
    </section>
    <section>
      <div class="container">
        <div class="top-wrapper align-items-center">
          <div class="row">
            <div class="col-sm-8">
              <h5><%= simple_format(h(t('.explanation'))) %></h5>
            </div>
            <div class="col-sm-3 ">
            </div>
          </div>
        </div>
    </section>
</main>

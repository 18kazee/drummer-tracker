<% @drummers.each do |drummer| %>
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">
          <%= drummer.name %>
        </h5>
        <h6 class="card-subtitle mb-2 text-muted">
          <% drummer.genres.each do |genre| %>
            <%= genre.name %>
          <% end %>
        </h6>
        <p class="card-text">
          <%= drummer.profile %>
        </p>
        <a class="btn btn-info btn-sm" href="#!"><%= (t'defaults.show') %></a>
      </div>
    </div>
  </div>
<% end %>

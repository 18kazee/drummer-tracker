<%= turbo_frame_tag 'user-show' do %>
  <div class="p-fixed b-filter">
    <div class="pt-3 px-2">
      <h5>投稿</h5>
    </div>
  </div>
  <% if logged_in? %>
    <%= turbo_frame_tag 'post_new' do %>
      <div class="pt-5"> 
        <%= render 'posts/form' %>
      </div>
    <% end %>
  <% else %>
    <div class="pt-5"></div>
  <%end %>
  <div id="posts">
    <%= render 'post_card' %> 
  </div>
<% end %>
<%= paginate @posts, theme: 'bootstrap-5' %>

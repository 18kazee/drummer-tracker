<section>
  <div class="container">
    <%= turbo_frame_tag 'post-show',data: {turbo_action: :advance} do %>
      <div class="row">
        <div class="col-lg-6 pt-3">
          <div class="p-fixed">
              <%= render 'side_menu' %>
          </div>
        </div>
        <div class="col-lg-6 justify-content-center">
          <div class="p-fixed b-filter">
            <div class="pt-3 px-2">
              <h5>投稿</h5>
            </div>
          </div>
          <% if logged_in? %>
            <%= turbo_frame_tag 'post_new' do %>
              <div class="pt-5"> 
              <%= render 'posts/form' %>
              </div>
            <% end %>
          <% else %>
            <div class="pt-5"></div>
          <%end %>
          <div id="posts" class="posts-card pt-2">
            <%= render 'post_card' %>
          </div>
            <%= paginate @posts, theme: 'bootstrap-5' %>
        </div>
      </div>
    <% end %>
  </div>
</section>

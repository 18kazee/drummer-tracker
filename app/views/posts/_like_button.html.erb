<% if logged_in? %>
  <%= turbo_frame_tag "like_button_#{post.id}" do %>
    <% if current_user && current_user.like?(post) %>
      <%= render 'posts/unlike', post: post %>
    <% else %>
      <%= render 'posts/like', post: post %>
    <% end %>
  <% end %>
<% else %>
  <p><%= post.likes.count %>Likes</p>
<% end %>

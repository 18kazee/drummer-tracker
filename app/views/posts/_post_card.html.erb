<% @posts.each do |post| %>
  <%= turbo_frame_tag "post_#{post.id}", data: { turbo_action: :advance } do %>
      <div class="card">
        <div class="card-body">
          <%= render 'post_card_user', post: post %>

          <%= link_to post_path(post), data: { turbo_frame: 'post-show', turbo_action: :advance} do %>
            <div class="ps-5">
              <p><%= post.tweet %></p>
              <%= render 'post_drummer_card', post: post %>
            </div>
          <% end %>
          <ul class="list-inline d-flex ps-5 mb-0 pt-3">
            <div id="like_button_<%= post.id %>" >
              <li> <%= render 'posts/like_button', post: post %></li>
            </div>
          </ul>
        </div>
      </div>
  <% end %>
<% end %>

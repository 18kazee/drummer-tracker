<section>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-5 px-3">
        <div class="overflow-hidden">
          <h3><%= (t'.title') %></h3>
          <%= form_with model: @user, local: true do |f| %>
            <div class="mb-2">
              <%= f.label :email, User.human_attribute_name(:email), class: "form-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="mb-5">
              <%= f.label :password, User.human_attribute_name(:password), class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="mb-4">
              <%= f.submit (t 'defaults.login'), class: "btn btn-primary" %>
            </div>
          <% end %>
          <ul class="list-unstyled">
            <li> <%= link_to (t '.to_register_page'), new_user_path %> </li>
            <li><%= link_to (t '.to_reset_password_page'), '#' %> </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
